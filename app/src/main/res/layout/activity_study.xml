<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <TextView
        android:id="@+id/textView_side1_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Side1"
        android:gravity="center"
        android:background="#FFFF30"
        android:textColor="#000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView_side1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.60"
        android:text="Press Next"
        android:scrollbars="vertical"
        android:background="#FFFF99"
        android:textColor="#000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView_side2_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Side2"
        android:gravity="center"
        android:background="#37F998"
        android:textColor="#000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView_side2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.58"
        android:text=""
        android:scrollbars="vertical"
        android:background="#66FFB2"
        android:textColor="#000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView_example_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Examples"
        android:gravity="center"
        android:background="#CBCECD"
        android:textColor="#000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView_example"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.58"
        android:text=""
        android:scrollbars="vertical"
        android:background="#DCDCDC"
        android:textColor="#000"
        android:textSize="18sp" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:text="Next" />

        <Button
            android:id="@+id/button_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show/Hide" />

        <CheckBox
            android:id="@+id/checkBox_correct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.60"
            android:text="Correct?" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="30sp">
    </TableRow>

    <Button
        android:id="@+id/button_close_study"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Finish Study" />
</LinearLayout>
