<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFF30"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <RatingBar
                android:id="@+id/ratingBar_NumCorrect"
                style="@android:style/Widget.DeviceDefault.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:numStars="6"
                android:rating="6"
                android:stepSize="1"
                android:visibility="visible" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView_side1_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFF30"
            android:gravity="center"
            android:text="روی اول"
            android:textColor="#000"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/imageButton_comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/comment" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView_side1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.60"
        android:background="#FFFF99"
        android:scrollbars="vertical"
        android:text="بعدی را بفشار"
        android:textColor="#000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView_side2_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#37F998"
        android:gravity="center"
        android:text="روی دوم"
        android:textColor="#000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView_side2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.58"
        android:text=""
        android:scrollbars="vertical"
        android:background="#66FFB2"
        android:textColor="#000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView_example_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CBCECD"
        android:gravity="center"
        android:text="مثال"
        android:textColor="#000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView_example"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.58"
        android:text=""
        android:scrollbars="vertical"
        android:background="#DCDCDC"
        android:textColor="#000"
        android:textSize="18sp" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:text="بعدی" />

        <Button
            android:id="@+id/button_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="کارت را برگردان" />

        <CheckBox
            android:id="@+id/checkBox_correct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.60"
            android:text="آیا حدستان درست بود؟" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="30sp">

    </TableRow>

    <Button
        android:id="@+id/button_close_study"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="پایان آزمون" />
</LinearLayout>
